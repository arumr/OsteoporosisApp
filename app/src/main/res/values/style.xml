<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom Style for TextInputLayout -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Default outline color -->
        <item name="boxStrokeColor">@color/black</item>
        <!-- Focused outline color -->
        <item name="colorControlActivated">@color/black</item>
        <!-- Hovered outline color -->
        <item name="colorControlHighlight">@color/black</item>
    </style>

    <style name="FilledBoxEndIconTint" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="endIconTint">@color/black</item>
    </style>
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/Hijau_tua</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>
    <style name="DropdownInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="boxStrokeColor">@color/Hijau_tua</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>
</resources>